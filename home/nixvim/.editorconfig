root = true

# Unix-style newlines with a newline ending every file, utf-8 charset
[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# 2 space indentation
[*.{nix,lua,js,ts,jsx,tsx,html,css,astro,ml}]
indent_style = space
indent_size = 2

# 4 space indentation
[*.{c,h,cpp,hpp,cc,cs,rs,py,zig}]
indent_style = space
indent_size = 4
